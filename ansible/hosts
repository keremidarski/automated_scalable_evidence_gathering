[ubuntu_hosts]
ubuntu_host ansible_host=192.168.0.101 ansible_user=ubuntu-test ansible_ssh_private_key_file=~/.ssh/your_private_key

[centos_hosts]
centos_host ansible_host=192.168.0.102 ansible_user=centos-test ansible_ssh_private_key_file=~/.ssh/your_private_key

[windows_hosts]
windows_host ansible_host=192.168.0.103 ansible_user=Administrator ansible_password=your_windows_password ansible_connection=winrm ansible_winrm_transport=ntlm ansible_winrm_server_cert_validation=ignore
